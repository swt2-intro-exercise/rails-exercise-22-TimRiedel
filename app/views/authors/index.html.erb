<h1>All authors</h1>


<table>
  <tr>
    <th>Name</th>
    <th>Homepage</th>
    <th colspan="2"></th>
  </tr>

  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= link_to author.homepage, 'https://' + author.homepage, target: :_blank%></td>
      <td><%= link_to 'Show', author_path(author) %></td>
      <td><%= link_to 'Edit', edit_author_path(author) %></td>
      <td><%= link_to 'Delete', author_path(author), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Add new author', new_author_path%>